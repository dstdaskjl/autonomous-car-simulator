#:set rgba_transparent_grey (251/255, 251/255, 251/255, 1)
#:set rgba_white (1, 1, 1, 1)

<Background@FloatLayout>:
    size_hint: 1, 1
    pos_hint: {'x': 0, 'y': 0}
    canvas.before:
        Color:
            rgba: rgba_white
        Rectangle:
            size: self.size
            pos: self.pos

<FakeArena@Widget>:
    size_hint: 0.8, 0.8
    pos_hint: {'x': 0.1, 'y': 0.1}
    canvas.after:
        Color:
            rgba: rgba_black
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<Arena@Widget>:
    size_hint: 0.79, 0.78
    size_hint: 0.5, 0.78
    pos_hint: {'x': 0.105, 'y': 0.11}
    canvas.after:
        Color:
            rgba: rgba_black
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<Car>:
    angle: 0
    size_hint: 0.05, 0.05
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
        Color:
            rgba: rgba_black
        Rectangle:
            pos: self.pos
            size: self.size

<Simulator>:
    car1: car1
    arena: arena

    Background:
        id: background

    FakeArena:

    Arena:
        id: arena

    Car:
        id: car1
        center: self.parent.center